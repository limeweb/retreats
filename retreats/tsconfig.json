{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true,
    "incremental": true,
    "types": ["node"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@blocks/*": ["src/blocks/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@config/*": ["src/config/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.jsx", "**/*.astro", "src/pages/rss.xml.js", "src/layouts/Header.jsx", "src/lib/AOSInitializer.js"],
  "exclude": ["node_modules", "dist"]
}